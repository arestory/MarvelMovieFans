<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SelectPhoto" parent="Matisse.Zhihu">

        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="bottomToolbar.apply.textColor">@color/colorAccent</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/colorAccent</item>
        <item name="item.checkCircle.backgroundColor">@color/colorAccent</item>

    </style>


    <style name="WelcomeTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/app_welcome</item>
        <item name="android:windowFullscreen">true</item>

    </style>

</resources>
